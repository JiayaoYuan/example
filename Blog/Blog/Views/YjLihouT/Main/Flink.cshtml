@model IEnumerable<Blog.Models.tb_friend_links>

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    string page = Session["page"].ToString();
}

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-lg-10 col-md-offset-2 main" id="main">
    <form action="../Main/DeleteFlinkAll" method="post">
        <h1 class="page-header">操作</h1>
        <ol class="breadcrumb">
            <li><a href="/YjLihouT/Main/AddFlink">增加友情链接</a></li>
        </ol>
        <h1 class="page-header">管理 <span class="badge">@Model.Count()</span></h1>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th><span class="glyphicon glyphicon-th-large"></span> <span class="visible-lg">选择</span></th>
                        <th><span class="glyphicon glyphicon-bookmark"></span> <span class="visible-lg">名称</span></th>
                        <th><span class="glyphicon glyphicon-link"></span> <span class="visible-lg">URL</span></th>
                        <th><span class="glyphicon glyphicon-pencil"></span> <span class="visible-lg">操作</span></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><input type="checkbox" class="input-control" name="checkbox&@item.friend_link_id" value="" /></td>
                            <td class="article-title">@item.friend_link_name</td>
                            <td>@item.friend_links</td>
                            <td><a href="update-flink.html">修改</a> <a href="/YjLihouT/Main/DeleteFlink?id=@item.friend_link_id" rel="6">删除</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <footer class="message_footer">
            <nav>
                <div class="btn-toolbar operation" role="toolbar">
                    <div class="btn-group" role="group"> <a class="btn btn-default" onClick="select()">全选</a> <a class="btn btn-default" onClick="reverse()">反选</a> <a class="btn btn-default" onClick="noselect()">不选</a> </div>
                    <div class="btn-group" role="group">
                        <button type="submit" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="删除全部选中" name="checkbox_delete">删除</button>
                    </div>
                </div>
                <ul class="pagination pagenav">
                    <li class="disabled"><i style="display:none;">@page</i><a aria-label="Previous"> <span aria-hidden="true">&laquo;</span> </a></li>                        
                    <li class="disabled"><a aria-label="Next"> <span aria-hidden="true">&raquo;</span> </a></li>
                </ul>
            </nav>
        </footer>
    </form>
</div>
<script type="text/javascript">
    $(function () {
        SetPaging("Flinks");
    })(jQuery)
</script>